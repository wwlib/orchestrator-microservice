{
  "name": "orchestrator-microservice",
  "version": "0.0.1",
  "private": true,
  "description": "Microsoft Orchestrator (Bot Framework) microservice example",
  "main": "/dist/index.js",
  "scripts": {
    "build": "webpack",
    "build:local": "NODE_ENV=development npm run build",
    "start": "node -r dotenv/config dist/index.js",
    "start:local": "npm run start | pino-pretty -c -l -t SYS:standard",
    "lint": "eslint --ext js,ts src test",
    "lint:fix": "npm run lint -- --fix",
    "lint:ci": "eslint --ext js,ts src test -f junit -o lint-report.xml",
    "test": "echo TODO",
    "test:microservice": "node test/test-microservice.js",
    "test:ci": "echo TODO",
    "clean": "rm -rf dist node_modules",
    "generate": "sh ./orchestrator-files/generateSnapshots.sh",
    "get-model": "sh ./orchestrator-files/downloadModel.sh",
    "intents-to-lu-files": "cd orchestrator-files; node intentsToLuFiles.js",
    "docker:build": "docker build -t orchestrator-microservice .",
    "docker:run": "docker run -it --rm -p 8000:8000 --env-file ./.env orchestrator-microservice"
  },
  "dependencies": {
    "@microsoft/botframework-cli": "^4.15.0",
    "@microsoft/orchestrator-core": "^4.14.3",
    "cookie-parser": "^1.4.6",
    "dotenv": "^10.0.0",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "fs-extra": "^10.1.0",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.7.2",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "pino-pretty": "^7.1.0",
    "ws": "^8.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.10.1",
    "@types/pino": "^6.3.11",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "jest": "^27.2.0",
    "jest-junit": "^13.0.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "4.4.3",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wwlib/orchestrator-microservice.git"
  },
  "keywords": [
    "microsoft bot framework,orchestrator,nlu,luis,dispatch,bert,dnn"
  ],
  "author": "Andrew Rapo <andrew@wwlib.org> (http://wwlib.org/)",
  "license": "MIT"
}
